{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Gls",
	"scopeName": "source.gls",
	"patterns": [
		{
			"include": "#property"
		}
	],
	"repository": {
	"stringblock": {
			"begin": "#\\$STRING_START\\$#",
			"beginCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"end": "STRING_END\\$#",
			"endCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"name": "variable.language",
			"patterns": [
				{
					"include": "#value"
				},
				{
					"include": "#blockcomment"
				},
				{
					"include": "#blockitemtype"
				},
				{
					"include": "#blocktype"
				},
				{
					"include": "#blockname"
				},
				{
					"include": "#blockisconst"
				},
				{
					"include": "#blockargs"
				},
				{
					"include": "#blockbody"
				},
				{
					"include": "#blockgenbody"
				},
				{
					"include": "#singlequotestring"
				},
				{
					"include": "#xml"
				},
				{
					"include": "#keyword"
				},
				{
					"include": "#cppcall"
				}
			]
		},
		"blockcomment": {
			"begin": "COMMENT\\$#",
			"beginCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"end": "#\\$",
			"endCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"name": "comment",
			"patterns": [
				{
					"include": "#stringcontent"
				}
			]
		},
		"blockitemtype": {
			"begin": "ITEM_TYPE\\$#",
			"beginCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"end": "#\\$",
			"endCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#number"
				}
			]
		},
		"blockisconst": {
			"begin": "METHOD_IS_CONST\\$#",
			"beginCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"end": "#\\$",
			"endCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#number"
				}
			]
		},
		"blockppp": {
			"begin": "PPP\\$#",
			"beginCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"end": "#\\$",
			"endCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#number"
				}
			]
		},
		"blockgenbody": {
			"begin": "GEN_BODY\\$#",
			"beginCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"end": "#\\$",
			"endCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#number"
				}
			]
		},
		"blocktype": {
			"begin": "TYPE\\$#",
			"beginCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"end": "#\\$",
			"endCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"name": "string",
			"patterns": [
				{
					"include": "#stringcontent"
				}
			]
		},
		"blockname": {
			"begin": "NAME\\$#",
			"beginCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"end": "#\\$",
			"endCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"name": "string",
			"patterns": [
				{
					"include": "#stringcontent"
				}
			]
		},
		"blockargs": {
			"begin": "ARGS\\$#",
			"beginCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"end": "#\\$",
			"endCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"name": "string",
			"patterns": [
				{
					"include": "#stringcontent"
				}
			]
		},
		"blockbody": {
			"begin": "BODY\\$#",
			"beginCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"end": "#\\$",
			"endCaptures": {
				"0": {
					"name": "variable.language"
				}
			},
			"name": "string",
			"patterns": [
				{
					"include": "#stringcontent"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#cppcall"
				}
			]
		},
		"property": {
			"patterns": [
				{
					"include": "#propertyname"
				},
				{
					"include": "#value"
				}
			]
		},
		"propertyname": {
			"match": "(?<!\\S)(?!\\d)([\\w$]+)(?::)(?!:)",
			"name": "variable"
		},
		"comments": {
			"patterns": [
				{
					"begin": "/\\*\\*(?!/)",
					"captures": {
						"0": {
							"name": "comment"
						}
					},
					"end": "\\*/",
					"name": "comment"
				},
				{
					"begin": "/\\*",
					"captures": {
						"0": {
							"name": "comment"
						}
					},
					"end": "\\*/",
					"name": "comment"
				},
				{
					"captures": {
						"1": {
							"name": "comment"
						}
					},
					"match": "(//).*$\\n?",
					"name": "comment"
				}
			]
		},
		"constant": {
			"match": "\\b(?:true|false|null)\\b",
			"name": "constant.language"
		},
		"number": {
			"match": "(?x)        # turn on extended mode\n  -?        # an optional minus\n  (?:\n    0       # a zero\n    |       # ...or...\n    [1-9]   # a 1-9 character\n    \\d*     # followed by zero or more digits\n  )\n  (?:\n    (?:\n      \\.    # a period\n      \\d+   # followed by one or more digits\n    )?\n    (?:\n      [eE]  # an e character\n      [+-]? # followed by an option +/-\n      \\d+   # followed by one or more digits\n    )?      # make exponent optional\n  )?        # make decimal portion optional",
			"name": "constant.numeric"
		},
		"string": {
			"begin": "\"",
			"beginCaptures": {
				"0": {
					"name": "string"
				}
			},
			"end": "\"",
			"endCaptures": {
				"0": {
					"name": "string"
				}
			},
			"name": "string",
			"patterns": [
				{
					"include": "#stringcontent"
				}
			]
		},
		"stringcontent": {
			"patterns": [
				{
					"match": "(?x)                # turn on extended mode\n  \\\\                # a literal backslash\n  (?:               # ...followed by...\n    [\"\\\\/bfnrt]     # one of these characters\n    |               # ...or...\n    u               # a u\n    [0-9a-fA-F]{4}) # and four hex digits",
					"name": "constant.character.escape"
				},
				{
					"match": "\\\\.",
					"name": "invalid"
				}
			]
		},
		"freename": {
			"match": "(?<![<>\\\\%&\\.=$\\\"()\\/])(?!.*[:<>\\\\%&=$\\\"()\\/])(?!\\d)(\\w+)",
			"name": "support.class"		
		},
		"variable": {
			"match": "(\\w+=)",
			"name": "keyword.operator"
		},
		"variableref": {
			"begin": "%",
			"beginCaptures": {
				"0": {
					"name": "constant.character.escape"
				}
			},
			"end": "%",
			"endCaptures": {
				"0": {
					"name": "constant.character.escape"
				}
			},
			"name": "constant.character.escape",
			"patterns": [
				{
					"include": "#stringcontent"
				}
			]
		},
		"singlequotestring": {
			"begin": "'",
			"beginCaptures": {
				"0": {
					"name": "support.function"
				}
			},
			"end": "'",
			"endCaptures": {
				"0": {
					"name": "support.function"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#value"
				}
			]
		},
		"xmlheader": {
			"begin": "<?xml",
			"beginCaptures": {
				"0": {
					"name": "support.function"
				}
			},
			"end": "?>",
			"endCaptures": {
				"0": {
					"name": "support.function"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#value"
				},
				{
					"include": "#singlequotestring"
				}
			]
		},
		"xmlopen": {
			"begin": "<",
			"beginCaptures": {
				"0": {
					"name": "support.function"
				}
			},
			"end": ">",
			"endCaptures": {
				"0": {
					"name": "support.function"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#value"
				},
				{
					"include": "#singlequotestring"
				}
			]
		},
		"xmlclose": {
			"begin": "</",
			"beginCaptures": {
				"0": {
					"name": "support.function"
				}
			},
			"end": ">",
			"endCaptures": {
				"0": {
					"name": "support.function"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#value"
				},
				{
					"include": "#singlequotestring"
				}
			]
		},
		"xmlselfclose": {
			"begin": "<",
			"beginCaptures": {
				"0": {
					"name": "support.function"
				}
			},
			"end": "/>",
			"endCaptures": {
				"0": {
					"name": "support.function"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#value"
				},
				{
					"include": "#singlequotestring"
				}
			]
		},
		"xmlcomment": {
			"begin": "<!--",
			"beginCaptures": {
				"0": {
					"name": "comment"
				}
			},
			"end": "-->",
			"endCaptures": {
				"0": {
					"name": "comment"
				}
			},
			"name": "comment",
			"patterns": [
				{
					"include": "#stringcontent"
				}
			]
		},
		"templated": {
			"begin": "(\\w+)(<)",
			"beginCaptures": {
				"0": {
					"name": "keyword.operator"
				},
				"1": {
					"name": "support.class"
				}
			},
			"end": ">",
			"endCaptures": {
				"0": {
					"name": "keyword.operator"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#stringcontent"
				}
			]
		},
		"keyword": {
			"match": "(\\w+:)(?!:)",
			"name": "keyword.operator"
		},
		"path": {
			"match": "(\\.*\/+[\\.\/\\w]*\\w+)$",
			"name": "keyword.control"
		},
		"file": {
			"match": "\\w+\\.(jpg|png|h|cpp|gls|py|sh)$",
			"name": "keyword.control"
		},
		"pointer": {
			"begin": "(\\w+)(->)",
			"beginCaptures": {
				"0": {
					"name": "keyword.operator"
				},
				"1": {
					"name": "support.class"
				}
			},
			"end": "\\w+",
			"endCaptures": {
				"0": {
					"name": "support.class"
				}
			}
		},
		"class": {
			"match": "::",
			"name": "keyword.operator"
		},
		"method": {
			"begin": "(\\w+)(\\()",
			"beginCaptures": {
				"0": {
					"name": "keyword.operator"
				},
				"1": {
					"name": "support.class"
				}
			},
			"end": "\\)",
			"endCaptures": {
				"0": {
					"name": "keyword.operator"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#stringcontent"
				}
			]
		},
		"cppcall": {
			"patterns": [
				{
					"include": "#pointer"
				},
				{
					"include": "#class"
				},
				{
					"include": "#method"
				}
			]
		},
		"freetextcall": {
			"match": "(?:(\\s|:))(?!.*\\.(jpg$|png$|h$|cpp$|gls$|py$|sh$))(?!\\d)(\\w+\\.+[\\.\\w]*)$",
			"name": "support.class"
		},
		"freeparentheses": {
			"begin": "\\(",
			"beginCaptures": {
				"0": {
					"name": "keyword.operator"
				}
			},
			"end": "\\)",
			"endCaptures": {
				"0": {
					"name": "keyword.operator"
				}
			},
			"name": "support.function",
			"patterns": [
				{
					"include": "#stringcontent"
				}
			]
		},
		"xml": {
			"patterns": [
				{
					"include": "#xmlheader"
				},
				{
					"include": "#xmlopen"
				},
				{
					"include": "#xmlclose"
				},
				{
					"include": "#xmlselfclose"
				},
				{
					"include": "#xmlcomment"
				}
			]
		},
		"value": {
			"patterns": [
				{
					"include": "#freeparentheses"
				},
				{
					"include": "#freetextcall"
				},
				{
					"include": "#file"
				},
				{
					"include": "#path"
				},
				{
					"include": "#variable"
				},
				{
					"include": "#variableref"
				},
				{
					"include": "#templated"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#constant"
				},
				{
					"include": "#number"
				},
				{
					"include": "#string"
				},
				{
					"include": "#freename"
				},
				{
					"include": "#stringblock"
				}
			]
		}
	}	
}